<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/btn_arrow_back_layout_bitcoin"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_baseline_arrow_back" />

    <TextView
        android:id="@+id/txt_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/layout_notificaions"
        android:layout_toEndOf="@+id/btn_arrow_back_layout_bitcoin"
        android:ellipsize="end"
        android:gravity="center_horizontal"

        android:maxLines="1"

        android:text="@string/bitcoin"

        android:textColor="@color/white"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/layout_notificaions">
        <ImageView
            android:id="@+id/btn_notification"
            android:layout_width="38dp"
            android:layout_height="38dp"

            android:src="@drawable/ic_baseline_timeline" />

    </FrameLayout>


</RelativeLayout>